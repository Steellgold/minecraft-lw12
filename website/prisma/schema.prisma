generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Player {
  uuid     String  @id @default(cuid())
  name     String  @unique
  head     Bytes
  score    Score[]
  games    Game[]
  isOnline Boolean @default(false)
}

enum GameStatus {
  STARTED
  FINISHED
}

model Game {
  id         String     @id @default(cuid())
  name       String     @unique
  startedAt  DateTime?
  finishedAt DateTime?
  status     GameStatus

  players Player[]
  scores  Score[]
}

model Score {
  id         String @id @default(cuid())
  player     Player @relation(fields: [playerUuid], references: [uuid])
  game       Game   @relation(fields: [gameId], references: [id])
  score      Int
  playerUuid String
  gameId     String
}
